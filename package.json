{
  "name": "path-loader",
  "version": "1.0.11",
  "description": "Utility that provides a single API for loading the content of a path/URL.",
  "main": "./dist/node/index.js",
  "types": "./dist/node/index.d.ts",
  "scripts": {
    "test-node": "TS_NODE_COMPILER_OPTIONS='{\"module\": \"commonjs\" }' npx mocha -r ts-node/register ./test/test-loaders-node",
    "test-browser": "TS_NODE_COMPILER_OPTIONS='{\"module\": \"commonjs\" }' ts-node  ./test/browser/runner.ts",
    "test": "npm run test-node && npm run test-browser",
    "lint": "npx eslint --quiet --fix ./test/**/*.ts && npx eslint --quiet --fix ./src/**/*.ts",
    "prebuild": "npm run lint && npm test",
    "build": "npm run buildOnly",
    "prebuildOnly": "npm run clean",
    "buildOnly": "npx webpack && npx tsc",
    "postbuildOnly": "npx tsc --emitDeclarationOnly --declaration",
    "postbuild": "npm run docs",
    "clean": "rimraf ./dist",
    "docs": "npx typedoc --plugin typedoc-plugin-markdown  --out docs ./src/index.ts"
  },
  "author": {
    "name": "Jeremy Whitlock",
    "email": "jwhitlock@apache.org",
    "url": "https://github.com/whitlockjc"
  },
  "bugs": {
    "url": "https://github.com/whitlockjc/path-loader/issues"
  },
  "files": [
    "dist"
  ],
  "homepage": "https://github.com/whitlockjc/path-loader",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/whitlockjc/path-loader.git"
  },
  "keywords": [
    "json"
  ],
  "browser": {
    "./src/loaders/file.ts": "./src/loaders/file-browser.ts"
  },
  "devDependencies": {
    "@types/bluebird": "^3.5.36",
    "@types/connect": "^3.4.35",
    "@types/fancy-log": "^2.0.0",
    "@types/gulp": "^4.0.9",
    "@types/gulp-load-plugins": "^0.0.33",
    "@types/jsdoc-to-markdown": "^7.0.3",
    "@types/karma": "^6.3.3",
    "@types/lodash": "^4.14.184",
    "@types/mocha": "^9.1.1",
    "@types/node": "^18.7.13",
    "@types/rimraf": "^3.0.2",
    "@types/superagent": "^4.1.15",
    "@types/webpack": "^4.41.26",
    "@types/json-schema": "^7.0.11",
    "@typescript-eslint/eslint-plugin": "^5.35.1",
    "@typescript-eslint/parser": "^5.35.1",
    "assert": "^2.0.0",
    "basic-auth": "^2.0.0",
    "connect": "^3.7.0",
    "eslint": "^8.22.0",
    "fancy-log": "^2.0.0",
    "karma": "^6.4.0",
    "karma-chrome-launcher": "^3.1.1",
    "karma-mocha": "^2.0.1",
    "karma-mocha-reporter": "^2.2.5",
    "karma-source-map-support": "^1.4.0",
    "karma-typescript": "^5.5.3",
    "karma-webpack": "^5.0.0",
    "mocha": "^10.0.0",
    "plugin-error": "^2.0.0",
    "process": "^0.11.10",
    "puppeteer": "^16.2.0",
    "rimraf": "^3.0.2",
    "string_decoder": "^1.3.0",
    "ts-loader": "^8.1.0",
    "ts-node": "^10.9.1",
    "typedoc": "^0.23.11",
    "typedoc-plugin-markdown": "^3.13.4",
    "webpack": "^5.74.0",
    "webpack-cli": "^4.10.0"
  },
  "dependencies": {
    "bluebird": "^3.7.2",
    "lodash": "^4.17.21",
    "native-promise-only": "^0.8.1",
    "superagent": "^8.0.0"
  }
}
